@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="identity-page">
    <div class="identity-container">
        <h1>@ViewData["Title"]</h1>

        <div class="alert alert-brown text-center" role="alert" data-persist="true">
            <p class="mb-0">
                Please check your email to reset your password. Follow the instructions in the email to complete the process.
            </p>
        </div>

        <div class="mt-4">
            <a asp-page="/Account/Login" class="w-100 btn btn-lg btn-primary">
                Return to Login
            </a>
        </div>
    </div>
</div>