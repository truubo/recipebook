@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="identity-page">
    <div class="identity-container">
        <h1>Ready to see some amazing recipes?</h1>

        <form id="account" method="post">
            <div class="alert alert-brown text-center" role="alert" data-persist="true">
                <p class="mb-0">
                    <strong>Use your Recipebook account to log in!</strong><br />
                </p>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="Username or Email" />
                <label asp-for="Input.UserNameOrEmail">Username or Email</label>
                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Log in</button>

            <div class="mt-3 text-center">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New to Recipebook? Register here</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}