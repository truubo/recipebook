@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Manage Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="card shadow-sm border-0" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center">
            <h2 class="card-title mb-4 text-danger fw-bold">@ViewData["Title"]</h2>

            <p class="text-muted mb-4">
                Your Recipebook account contains personal data that you have provided.
                You can permanently delete this information if you wish.
            </p>

            <div class="alert alert-brown" role="alert" data-persist="true">
                <strong>Warning:</strong> Deleting your account will permanently remove all of your data,
                including saved recipes, preferences, and account history.
                <span class="fw-bold">This action cannot be undone.</span>
            </div>

            @* Unsure on whether to implement this or not, will keep it commented for now *@
            @* 
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mt-3">
                <button class="btn btn-outline-primary" type="submit">Download My Data</button>
            </form>
            *@

            <div class="mt-4">
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-lg btn-danger px-4 py-2">
                    <i class="bi bi-exclamation-triangle-fill"></i> Delete My Account
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}