@model Recipebook.Models.List
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete List";
    var ownerEmail = ViewBag.OwnerEmail as string; // set in controller
}

<h2 class="mb-4">Delete List</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title text-danger">Are you sure you want to delete this list?</h5>

        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Type</dt>
            <dd class="col-sm-9">@Model.ListType</dd>

            <dt class="col-sm-3 fw-bold">Owner</dt>
            <dd class="col-sm-9">@ownerEmail</dd>

            <dt class="col-sm-3 fw-bold">Created</dt>
            <dd class="col-sm-9">@Model.CreationDate.ToLocalTime()</dd>

            <dt class="col-sm-3 fw-bold">Private?</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Private ? "bg-danger" : "bg-success")">
                    @(Model.Private ? "Yes" : "No")
                </span>
            </dd>
        </dl>

        <div class="d-flex gap-2">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-brown">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </div>
</div>