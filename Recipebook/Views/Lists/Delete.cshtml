@model Recipebook.Models.List
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete List";
    var ownerEmail = ViewBag.OwnerEmail as string; // set in controller
}

<div class="container delete-page">
    <div class="delete-header">
        <h1 class="text-danger">Delete List</h1>
        <p class="text-danger">Are you sure you want to delete this list? This action cannot be undone.</p>
    </div>

    <div class="card delete-card">
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-4 text-muted">Name</dt>
                <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                <dt class="col-sm-4 text-muted">Type</dt>
                <dd class="col-sm-8">@Model.ListType</dd>

                <dt class="col-sm-4 text-muted">Privacy</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Private ? "bg-danger" : "bg-success")">
                        @(Model.Private ? "Private" : "Public")
                    </span>
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="delete-actions">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a onclick="history.back()" class="btn btn-brown btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>