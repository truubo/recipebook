@model Recipebook.Models.List
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete List";
    var ownerEmail = ViewBag.OwnerEmail as string; // set in controller if you display it
}

<h2>Delete List</h2>
<h4>Are you sure you want to delete this list?</h4>

<div class="mb-3">
    <strong>@Model.Name</strong> (@Model.ListType)
    @if (!string.IsNullOrWhiteSpace(ownerEmail))
    {
        @: — Owner: @ownerEmail
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
