@model Tuple<IEnumerable<Recipebook.Models.List>, string?>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var lists = Model.Item1;
    var myUserId = Model.Item2;
    var ownerEmails = ViewBag.OwnerEmails as Dictionary<string, string>;
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Owner</th>
                    <th># Recipes</th>
                    <th>Private?</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (lists != null && lists.Any())
                {
                    foreach (var l in lists)
                    {
                        var ownerEmail = (ownerEmails != null && ownerEmails.TryGetValue(l.OwnerId, out var em)) ? em : "Unknown";

                        <tr>
                            <td><strong>@l.Name</strong></td>
                            <td>@l.ListType</td>
                            <td>@ownerEmail</td>
                            <td>
                                <span class="badge bg-secondary">
                                    @(l.ListRecipes?.Count ?? 0)
                                </span>
                            </td>
                            <td>
                                <span class="badge @(l.Private ? "bg-danger" : "bg-success")">
                                    @(l.Private ? "Yes" : "No")
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Lists" asp-action="Edit" asp-route-id="@l.Id" class="btn btn-sm btn-primary">
                                        Edit
                                    </a>
                                    <a asp-controller="Lists" asp-action="Details" asp-route-id="@l.Id" class="btn btn-sm btn-info text-white">
                                        Details
                                    </a>
                                    <a asp-controller="Lists" asp-action="Delete" asp-route-id="@l.Id" class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-muted text-center">No lists to show.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>