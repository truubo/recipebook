@model Tuple<IEnumerable<Recipebook.Models.List>, string?>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var lists = Model.Item1;
    var myUserId = Model.Item2;
    var ownerEmails = ViewBag.OwnerEmails as Dictionary<string, string>;
}

@if (lists != null && lists.Where(l => !l.IsArchived).Any())
{
    <div class="card-grid">
        @foreach (var l in lists)
        {
            var ownerEmail = (ownerEmails != null && ownerEmails.TryGetValue(l.OwnerId, out var em)) ? em : "Unknown";

            <div class="list-card">
                <a asp-controller="Lists" asp-action="Details" asp-route-id="@l.Id" class="card-overlay">View Details</a>

                <div class="card-header d-flex justify-content-between align-items-start">
                    <h5 class="card-title">@l.Name</h5>
                    @if (l.Private)
                    {
                        <span class="badge bg-danger private-badge">Private</span>
                    }
                </div>

                @{
                    var activeRecipes = l.ListRecipes?.Where(lr => lr.Recipe != null && !lr.Recipe.IsArchived).ToList() ?? new List<Recipebook.Models.ListRecipe>();
                    var count = activeRecipes.Count;
                }
                <p class="card-text">
                    <strong>@l.ListType</strong> - @count item@(count == 1 ? "" : "s")
                </p>

                <div class="card-footer d-flex justify-content-between align-items-center">
                    <small class="text-muted">By <a href="mailto:@ownerEmail">@ownerEmail</a></small>

                    @if (User.Identity.IsAuthenticated && l.OwnerId == myUserId)
                    {
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@l.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@l.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-brown text-center">No lists to show.</div>
}