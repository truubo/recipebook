@model Recipebook.Models.ViewModels.ListEditVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit List";
}

<h2>Edit List</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="List.Id" />

    <div class="mb-3">
        <label asp-for="List.Name" class="form-label"></label>
        <input asp-for="List.Name" class="form-control" />
        <span asp-validation-for="List.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="List.ListType" class="form-label"></label>
        <select asp-for="List.ListType" class="form-select"
                asp-items="Html.GetEnumSelectList<Recipebook.Models.ListType>()"></select>
        <span asp-validation-for="List.ListType" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="List.Private" class="form-check-input" />
        <label asp-for="List.Private" class="form-check-label"></label>
    </div>

    <!-- OwnerId is set server-side -->

    <div class="mb-3">
        <label asp-for="SelectedRecipeIds" class="form-label"></label>
        <select asp-for="SelectedRecipeIds"
                asp-items="Model.RecipeChoices"
                class="form-select"
                multiple
                size="10">
        </select>
        <span asp-validation-for="SelectedRecipeIds" class="text-danger"></span>
        <small class="text-muted">Hold Ctrl/Cmd to select multiple.</small>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
