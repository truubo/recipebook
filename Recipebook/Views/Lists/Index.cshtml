@model Recipebook.Models.ViewModels.ListsIndexVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Lists";
    var currentSearch = ViewBag.SearchString as string;
}

<div class="container list-index-page">
    <div class="index-header">
        <h1>Lists</h1>
        <p class="lead text-muted">Add your favorite recipes or ingredients to a list!</p>
    </div>

    <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Lists" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        }

        <form asp-action="Index" method="get" class="d-flex gap-2 ms-auto">
            <input type="text"
                   name="searchString"
                   value="@(currentSearch ?? string.Empty)"
                   class="form-control"
                   placeholder="Search by list name..." />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </form>
    </div>

    <ul class="nav nav-tabs" id="listsTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="my-tab" data-bs-toggle="tab" data-bs-target="#my"
                    type="button" role="tab" aria-controls="my" aria-selected="true">
                My Lists
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="all-tab" data-bs-toggle="tab" data-bs-target="#all"
                    type="button" role="tab" aria-controls="all" aria-selected="false">
                All Lists
            </button>
        </li>
    </ul>

    <div class="tab-content pt-3" id="listsTabsContent">
        <!-- MY LISTS TAB -->
        <div class="tab-pane fade show active" id="my" role="tabpanel" aria-labelledby="my-tab">
            @await Html.PartialAsync("_ListsTable", new Tuple<IEnumerable<Recipebook.Models.List>, string?>(Model.MyLists, Model.MyUserId))
        </div>

        <!-- ALL LISTS TAB -->
        <div class="tab-pane fade" id="all" role="tabpanel" aria-labelledby="all-tab">
            @await Html.PartialAsync("_ListsTable", new Tuple<IEnumerable<Recipebook.Models.List>, string?>(Model.AllLists, Model.MyUserId))
        </div>
    </div>
</div>