@model Recipebook.Models.List
@using System
@using System.Linq
@using Recipebook.Models
@using Recipebook.Infrastructure.Binding
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="/css/print.css" rel="stylesheet" />

@functions {
    // View-only DTO so the aggregation is strongly-typed (cleaner than anonymous types for later rendering)
    public class IngredientRow
    {
        public string Name { get; set; } = "";
        public List<(decimal TotalQty, string Unit)> Units { get; set; } = new();
    }
}

@{
    ViewData["Title"] = "List Details";

    // Provided by controller for mailto links / attribution
    var ownerEmail = ViewBag.OwnerEmail as string;

    // For recipes-list: simple count of items attached
    var itemCount = Model.ListRecipes?.Count() ?? 0;

    // This page supports two list modes
    bool isIngredientsList = Model.ListType == ListType.Ingredients;

    // Pre-compute the distinct ingredient count for the badge on Ingredients lists
    var ingredientCount = 0;
    if (isIngredientsList && Model.ListRecipes != null)
    {
        ingredientCount = Model.ListRecipes
            .Where(lr => lr?.Recipe?.IngredientRecipes != null)
            .SelectMany(lr => lr!.Recipe!.IngredientRecipes!)
            .Where(ir => ir?.Ingredient?.Name != null)
            .Select(ir => ir!.Ingredient!.Name!.Trim())
            .Distinct(StringComparer.OrdinalIgnoreCase)
            .Count();
    }
}

<style>
    /* Small vertical spacing between stacked lines inside table cells */
    .table td > div + div {
        margin-top: .125rem;
    }
</style>

<div class="details-page position-relative">

    @* ===== Header: Back / Print (ingredients only) / Edit / Delete ===== *@
    <div class="details-actions-top d-flex justify-content-between w-100">
        <a onclick="history.back()" class="btn btn-brown" title="Back to lists">
            <i class="bi bi-arrow-left-circle"></i>
        </a>

        <div class="d-flex gap-2 align-items-center">
            @* Owner-only controls *@
            @if (User?.Identity is { IsAuthenticated: true } && ownerEmail == User.Identity.Name)
            {
                @* Print is only useful for grocery/ingredients lists *@
                @if (isIngredientsList)
                {
                    <button type="button" class="btn btn-brown print-btn" onclick="window.print()" title="Print list">
                        <i class="bi bi-printer me-1"></i>
                        <span>Print List</span>
                    </button>
                }

                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" title="Edit list">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger" title="Delete list">
                    <i class="bi bi-trash"></i>
                </a>
            }
        </div>
    </div>

    @* ===== Title + owner info ===== *@
    <div class="details-header text-center mt-5">
        <h1 class="recipe-title">@Model?.Name</h1>

        <div class="author d-flex justify-content-center align-items-center gap-2">
            <span>
                List created by <a href="mailto:@ownerEmail">@ownerEmail</a>
            </span>
            <span class="badge @(Model!.Private ? "bg-danger" : "bg-success")">
                @(Model.Private ? "Private" : "Public")
            </span>
        </div>
    </div>

    @* ===== Body ===== *@
    <div class="details-body mt-4">
        @if (Model.ListRecipes != null && Model.ListRecipes.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="section-title mb-0">
                    @Model.ListType
                    <span class="badge bg-success text-white">
                        @(isIngredientsList ? ingredientCount : itemCount)
                    </span>
                </h4>

                @* Sorting only applies to the recipes list view (server-side resort via querystring) *@
                @if (!isIngredientsList)
                {
                    <div>
                        <label for="sortSelect" class="form-label fw-bold me-2 mb-0">Sort by:</label>
                        <select id="sortSelect" asp-items="@Html.GetEnumSelectList<SortType>()" class="form-select d-inline-block w-auto"></select>
                    </div>
                }
            </div>

            @* ===== Ingredients list mode: aggregate ingredients across selected recipes ===== *@
            @if (isIngredientsList)
            {
                @* Build the aggregated ingredient view-model (code-only; keep Razor happy inside a code block) *@

                // 1) Flatten IngredientRecipes across ListRecipes
                // 2) Normalize names (Trim), convert quantities to decimal, stringify units
                // 3) Group by ingredient name (case-insensitive handled upstream in the count), then by Unit
                // 4) Sum quantities per unit; produce a stable order: units alphabetically, then ingredient name
                List<IngredientRow> allIngredients = new();

                if (Model.ListRecipes != null)
                {
                    allIngredients = Model.ListRecipes
                    .Where(lr => lr?.Recipe?.IngredientRecipes != null)
                    .SelectMany(lr => lr!.Recipe!.IngredientRecipes!)
                    .Where(ir => ir?.Ingredient?.Name != null)
                    .Select(ir => new
                    {
                        Name = ir!.Ingredient!.Name!.Trim(),
                        Qty = Convert.ToDecimal(ir.Quantity),
                        Unit = ir.Unit.ToString()
                    })
                    // Group by ingredient name only
                    .GroupBy(x => x.Name)
                    .Select(g => new IngredientRow
                        {
                            Name = g.Key,
                            // Nested grouping by unit with summed quantities
                            Units = g.GroupBy(x => x.Unit)
                        .Select(u => (u.Sum(x => x.Qty), u.Key))
                        .OrderBy(u => u.Key)
                        .ToList()
                        })
                    .OrderBy(r => r.Name)
                    .ToList();
                }

                @* Render the aggregated grocery list as a responsive table *@
                @if (allIngredients.Any())
                {
                    // Map: Ingredient Name -> distinct recipe titles that include it
                    var recipesByIngredient = new Dictionary<string, HashSet<string>>(StringComparer.OrdinalIgnoreCase);
                    foreach (var lr in Model.ListRecipes!)
                    {
                        if (lr?.Recipe?.IngredientRecipes == null) continue;

                        var recipeTitle = string.IsNullOrWhiteSpace(lr.Recipe.Title)
                        ? $"Recipe #{lr.Recipe.Id}"
                        : lr.Recipe.Title.Trim();

                        foreach (var ir in lr.Recipe.IngredientRecipes)
                        {
                            var name = ir?.Ingredient?.Name?.Trim();
                            if (string.IsNullOrWhiteSpace(name)) continue;

                            if (!recipesByIngredient.TryGetValue(name, out var set))
                            {
                                set = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
                                recipesByIngredient[name] = set;
                            }
                            set.Add(recipeTitle);
                        }
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Ingredient</th>
                                    <th scope="col" class="text-nowrap">Quantity</th>
                                    <th scope="col">Unit</th>
                                    <th scope="col">Related Recipe(s)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ing in allIngredients)
                                {
                                    // Prepare recipe label + tooltip (list can be long)
                                    var recipeList = recipesByIngredient.TryGetValue(ing.Name, out var rset)
                                    ? rset.OrderBy(t => t).ToList()
                                    : new List<string>();

                                    var recipeLabel = recipeList.Count switch
                                    {
                                        0 => "-",
                                        1 => recipeList[0],
                                        _ => $"{recipeList.Count} recipes"
                                    };
                                    var recipeTitleAttr = recipeList.Count <= 1 ? null : string.Join(", ", recipeList);

                                    <tr>
                                        <td class="fw-semibold">@ing.Name</td>

                                        <td>
                                            @foreach (var (qty, _) in ing.Units)
                                            {
                                                <div>@FractionDecimalBinder.ToFraction(qty)</div>
                                            }
                                        </td>

                                        <td>
                                            @foreach (var (qty, unit) in ing.Units)
                                            {
                                                var unitDisplay = qty == 1 ? unit : unit + "s";
                                                <div>@unitDisplay</div>
                                            }
                                        </td>

                                        @* MINIMAL CHANGE: render titles as stacked links *@
                                        <td>
                                            @if (recipeList.Count == 0)
                                            {
                                                <div>-</div>
                                            }
                                            else
                                            {
                                                @foreach (var title in recipeList)
                                                {
                                                    var match = Model.ListRecipes?
                                                    .FirstOrDefault(x => x?.Recipe?.Title?.Trim() == title);

                                                    if (match?.Recipe != null)
                                                    {
                                                        <div>
                                                            <a asp-controller="Recipes"
                                                               asp-action="Details"
                                                               asp-route-id="@match.Recipe.Id"
                                                               class="text-decoration-none">
                                                                @title
                                                            </a>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div>@title</div>
                                                    }
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">No ingredients found from linked recipes.</p>
                }
            }
            else
            {
                @* ===== Recipes list mode: show linked recipes with a short description preview ===== *@
                <ul class="list-group">
                    @foreach (var lr in Model.ListRecipes)
                    {
                        if (lr.Recipe != null)
                        {
                            <a asp-controller="Recipes"
                               asp-action="Details"
                               asp-route-id="@lr?.Recipe?.Id"
                               class="list-group-item my-1 text-decoration-none custom-list-item">

                                <div>
                                    <strong>@lr.Recipe?.Title</strong>
                                    <p class="mb-0 small">
                                        @{
                                            // Truncate long descriptions for a tidy list preview
                                            var desc = lr.Recipe?.Description ?? "";
                                            if (string.IsNullOrWhiteSpace(desc))
                                            {
                                                @: <span class="fst-italic">No description available.</span>
                                            }
                                            else
                                            {
                                                if (desc.Length > 100)
                                                {
                                                    desc = desc.Substring(0, 100) + "...";
                                                }
                                                @desc
                                            }
                                        }
                                    </p>
                                </div>
                            </a>
                        }
                    }
                </ul>
            }
        }
        else
        {
            <p class="text-muted">No items attached yet.</p>
        }
    </div>
</div>

@* ===== Client-side sort enhancer (recipes list only). Triggers server-side re-query via ?sortType=... ===== *@
@if (!isIngredientsList)
{
    <script>
        const sortSelect = document.querySelector("#sortSelect");
        if (sortSelect) {
            sortSelect.addEventListener("change", function () {
                window.location.href = `?sortType=${this.value}`;
            });
            sortSelect.querySelectorAll("option").forEach(item => {
                if (item.value == new URLSearchParams(window.location.search).get("sortType")) {
                    item.selected = true;
                }
            });
        }
    </script>
}
