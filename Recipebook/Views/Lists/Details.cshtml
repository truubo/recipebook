@* Views/Lists/Details.cshtml *@
@model Recipebook.Models.List
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "List Details";
    var ownerEmail = ViewBag.OwnerEmail as string;
}

<h2 class="mb-4">@Model.Name</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-3">
            <dt class="col-sm-3 fw-bold">Type</dt>
            <dd class="col-sm-9">@Model.ListType</dd>

            <dt class="col-sm-3 fw-bold">Owner</dt>
            <dd class="col-sm-9">@ownerEmail</dd>

            <dt class="col-sm-3 fw-bold">Created</dt>
            <dd class="col-sm-9">@Model.CreationDate.ToLocalTime()</dd>

            <dt class="col-sm-3 fw-bold">Private?</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Private ? "bg-danger" : "bg-success")">
                    @(Model.Private ? "Yes" : "No")
                </span>
            </dd>
        </dl>

        <h4 class="mt-4 mb-3">
            Recipes
            <span class="badge bg-secondary">
                @(Model.ListRecipes?.Count() ?? 0)
            </span>
        </h4>

        @if (Model.ListRecipes != null && Model.ListRecipes.Any())
        {
            <select id="sortSelect" asp-items="@Html.GetEnumSelectList<SortType>()">
                <!--<option value="1">Sort by A-Z</option>
                <option value="2">Sort by Z-A</option>-->
            </select>
            <ul class="list-group">
                @foreach (var lr in Model.ListRecipes)
                {
                            <li class="list-group-item d-flex justify-content-between align-items-center my-1" style="border: 1px solid #ccc;background: linear-gradient(90deg, #fff 0%, #fff 50%, #fff0 75%, #fff0 100%), url(/img/food.jpg);background-repeat: no-repeat;background-size: 100%;background-position-y: 50%;">
                        <div id="info">
                            <strong>@lr.Recipe?.Title</strong>
                            <p>@lr.Recipe?.Description</p>
                        </div>
                        @if (lr.Recipe != null)
                        {
                            <a asp-controller="Recipes"
                               asp-action="Details"
                               asp-route-id="@lr.Recipe.Id"
                               class="btn btn-sm btn-primary">
                                View
                            </a>
                        }
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No recipes attached yet.</p>
        }

        <div class="d-flex gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
</div>

<script>
    document.querySelectorAll("#sortSelect option").forEach(item => {
        if (item.value == new URLSearchParams(window.location.search).get("sortType")) {
            item.selected = true
        }
    })
    document.querySelector("#sortSelect").addEventListener("change", function () {
        window.location.href = `?sortType=${this.value}`
    })
</script>