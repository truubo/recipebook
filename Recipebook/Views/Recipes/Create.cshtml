@model Recipebook.Models.Recipe

@{
    ViewData["Title"] = "Create";
}

<div class="recipe-form-page">
    <h1>Create New Recipe</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Directions" class="form-label fw-bold"></label>
                    <textarea asp-for="Directions" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Directions" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Categories</label>
                    <select name="selectedCategories"
                            asp-items="ViewBag.AllCategories"
                            multiple="multiple"
                            class="form-control">
                    </select>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Private" id="privateCheck" />
                    <label class="form-check-label fw-bold" for="privateCheck">
                        @Html.DisplayNameFor(model => model.Private)
                    </label>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-brown btn-lg">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}