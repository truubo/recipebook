@model Recipebook.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-danger">Delete Recipe</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="text-warning mb-3">Are you sure you want to delete this recipe?</h5>

        <dl class="row">
            <dt class="col-sm-3 text-muted">Title</dt>
            <dd class="col-sm-9"><strong>@Model.Title</strong></dd>

            <dt class="col-sm-3 text-muted">Description</dt>
            <dd class="col-sm-9">
                @if (@Model.Description != null)
                {
                    @Model.Description
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3 text-muted">Directions</dt>
            <dd class="col-sm-9">@Model.Directions</dd>

            <dt class="col-sm-3 text-muted">
                Categories
            </dt>
            <dd class="col-sm-9">
                @if (Model.CategoryRecipes != null && Model.CategoryRecipes.Any())
                {
                    <ul class="list-inline mb-0">
                        @foreach (var cr in Model.CategoryRecipes)
                        {
                            <li class="list-inline-item badge bg-info text-dark">@cr.Category.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3 text-muted">Privacy</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Private ? "bg-danger" : "bg-success")">
                    @(Model.Private ? "Private" : "Public")
                </span>
            </dd>

            <dt class="col-sm-3 text-muted">Author ID</dt>
            <dd class="col-sm-9">@Model.AuthorId</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2 mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>