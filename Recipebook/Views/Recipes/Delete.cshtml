@model Recipebook.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<div class="container delete-page">
    <div class="delete-header">
        <h1 class="text-danger">Delete Recipe</h1>
        <p class="text-danger">Are you sure you want to delete this recipe? This action cannot be undone.</p>
    </div>

    <div class="card delete-card">
        <div class="card-body">
            @* Quick read-only summary so the user can confirm they're deleting the correct item. *@
            <dl class="row mb-4">
                <dt class="col-sm-4 text-muted">Title</dt>
                <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                <dt class="col-sm-4 text-muted">Description</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        @Model.Description
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </dd>

                <dt class="col-sm-4 text-muted">Categories</dt>
                <dd class="col-sm-8">
                    @* Safely handle empty or null category join rows. *@
                    @if (Model.CategoryRecipes != null && Model.CategoryRecipes.Any())
                    {
                        <ul class="list-inline mb-0">
                            @foreach (var cr in Model.CategoryRecipes)
                            {
                                <li class="list-inline-item badge bg-info text-dark">@cr.Category?.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </dd>

                <dt class="col-sm-4 text-muted">Privacy</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Private ? "bg-danger" : "bg-success")">
                        @(Model.Private ? "Private" : "Public")
                    </span>
                </dd>
            </dl>

            @* Destructive action: POST to Delete with hidden Id. UI provides a visible cancel path (history.back()). *@
            <form asp-action="Delete" class="delete-actions">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a onclick="history.back()" class="btn btn-brown btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>
