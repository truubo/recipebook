@model Recipebook.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">@Html.DisplayFor(model => model.Title)</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-muted">
                Categories
            </dt>
            <dd class="col-sm-9">
                @if (Model.CategoryRecipes != null && Model.CategoryRecipes.Any())
                {
                    <ul class="list-inline mb-0">
                        @foreach (var cr in Model.CategoryRecipes)
                        {
                            <li class="list-inline-item">
                                <a asp-controller="Categories"
                                   asp-action="Details"
                                   asp-route-id="@cr.Category.Id"
                                   class="badge bg-info text-dark text-decoration-none">
                                    @cr.Category.Name
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3 text-muted">
                Author Email
            </dt>
            <dd class="col-sm-9">
                <a href="mailto:@ViewData["AuthorEmail"]">@ViewData["AuthorEmail"]</a>
            </dd>

            <dt class="col-sm-3 text-muted">
                Privacy
            </dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Private ? "bg-danger" : "bg-success")">
                    @(Model.Private ? "Private" : "Public")
                </span>
            </dd>

            <dt class="col-sm-3 text-muted">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    @Html.DisplayFor(model => model.Description)
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3 text-muted">
                @Html.DisplayNameFor(model => model.Directions)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Directions)
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        Edit
    </a>
    <a onclick="history.back()" class="btn btn-secondary">
        Back to List
    </a>
</div>