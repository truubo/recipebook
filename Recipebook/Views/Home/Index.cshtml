@{
    // Set page title for the browser/tab
    ViewData["Title"] = "Home";
}

<div class="container home-page">
    <h1>Welcome to Recipebook!</h1>
    <p class="lead">Your personal hub for storing, sharing, and discovering recipes.</p>

    <div class="home-cards row">
        <!-- Navigate to Recipes Index -->
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <h5 class="card-title">Browse Recipes</h5>
                <p class="card-text">Discover meals shared by other users.</p>
                <a asp-controller="Recipes" asp-action="Index" class="btn btn-primary">Explore</a>
            </div>
        </div>

        <!-- Navigate to Lists Index -->
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <h5 class="card-title">Organize Lists</h5>
                <p class="card-text">Plan your weekly meals or grocery shopping.</p>
                <a asp-controller="Lists" asp-action="Index" class="btn btn-success">View Lists</a>
            </div>
        </div>

        <!-- Navigate to Categories Index -->
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <h5 class="card-title">Categories</h5>
                <p class="card-text">Sort recipes into easy-to-find categories.</p>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-info">View Categories</a>
            </div>
        </div>
    </div>
</div>
