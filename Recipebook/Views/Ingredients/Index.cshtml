@model IEnumerable<Ingredient>
@using System.Security.Claims

@{
    // Browser/tab title
    ViewData["Title"] = "Ingredients";

    // Preserve search text to repopulate the input after a search
    var currentSearch = ViewBag.SearchString as string;
}

<div class="container ingredient-index-page">
    <div class="index-header">
        <h1>Ingredients</h1>
        <p class="lead text-muted">Browse all ingredients, add new ones, or modify existing!</p>
    </div>

    <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        @* Only signed-in users can create new ingredients *@
        @if (User?.Identity is { IsAuthenticated: true })
        {
            <a asp-action="Create" class="btn btn-success btn-create">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        }

        @* Simple search by ingredient name *@
        <form asp-action="Index" method="get" class="d-flex gap-2 ms-auto">
            <input type="text"
                   name="searchString"
                   value="@(currentSearch ?? string.Empty)"
                   class="form-control"
                   placeholder="Search by ingredient name..." />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </form>
    </div>

    @* Feedback if the query returned no items *@
    @if (!Model.Any())
    {
        <div class="alert alert-brown" data-persist="true">No ingredients found.</div>
    }

    <div class="ingredient-card-grid">
        @foreach (var item in Model)
        {
            <div class="ingredient-pill-card">
                <div class="card-body">
                    <h5 class="ingredient-name">@item.Name</h5>

                    @* Owner-only quick actions *@
                    @if (User?.Identity is { IsAuthenticated: true } && item.OwnerId == User.FindFirstValue(ClaimTypes.NameIdentifier) || User.IsInRole("Admin"))
                    {
                        <div class="btn-container">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
