@model Recipebook.Models.Ingredient

@{
    ViewData["Title"] = "Delete";
}

<div class="container delete-page">
    <div class="delete-header">
        <h1 class="text-danger">Delete Ingredient</h1>
        <p class="text-danger">Are you sure you want to delete this ingredient? This action cannot be undone.</p>
    </div>

    <div class="card delete-card">
        <div class="card-body">
            <p class="col-sm-auto text-center"><strong>@Model.Name</strong></p>

            <form asp-action="Delete" class="delete-actions">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a onclick="history.back()" class="btn btn-brown btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>