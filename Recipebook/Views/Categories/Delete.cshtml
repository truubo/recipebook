@model Recipebook.Models.Category

@{
    // Page title for browser/tab display
    ViewData["Title"] = "Delete";
}

<div class="container delete-page">
    <div class="delete-header">
        <h1 class="text-danger">Delete Category</h1>
        <p class="text-danger">
            Are you sure you want to delete this category?
        </p>
    </div>

    <div class="card delete-card">
        <div class="card-body">
            <!-- Display the category name so the user can confirm they're deleting the correct one -->
            <p class="col-sm-auto text-center"><strong>@Model.Name</strong></p>

            <form asp-action="Delete" class="delete-actions">
                <!-- Hidden ID ensures the correct category is deleted -->
                <input type="hidden" asp-for="Id" />

                <!-- Confirm deletion -->
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>

                <!-- Go back without deleting -->
                <a onclick="history.back()" class="btn btn-brown btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>
