@model Recipebook.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4 text-danger">Delete Category</h1>

<div class="card shadow-sm mb-4 border-danger">
    <div class="card-body">
        <h5 class="mb-3">Are you sure you want to delete this category?</h5>
        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                Back to List
            </a>
        </form>
    </div>
</div>