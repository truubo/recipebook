@model Recipebook.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container delete-page">
    <div class="delete-header">
        <h1 class="text-danger">Delete Category</h1>
        <p class="text-danger">Are you sure you want to delete this category? This action cannot be undone.</p>
    </div>

    <div class="card delete-card">
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-4 text-muted">Category</dt>
                <dd class="col-sm-8"><strong>@Model.Name</strong></dd>
            </dl>

            <form asp-action="Delete" class="delete-actions">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-brown btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>