@model Recipebook.Models.Category

@{
    // Set page title for the Create Category view
    ViewData["Title"] = "Create";
}

<div class="recipe-form-page">
    <!-- ===========================
         PAGE HEADER
         Displays the main heading for the Create Category form
         =========================== -->
    <h1>Create New Category</h1>

    <!-- Card container for the form -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <!-- Form posts new category data to CategoriesController.Create -->
            <form asp-action="Create" method="post">
                <!-- Displays validation summary for model errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- ===========================
                     CATEGORY NAME FIELD
                     Collects the new category name from the user
                     =========================== -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- ===========================
                     ACTION BUTTONS
                     Submit -> Creates category
                     Back -> Returns user to previous page
                     =========================== -->
                <div class="d-flex justify-content-center gap-2 mt-3">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                    <a onclick="history.back()" class="btn btn-brown btn-lg">
                        Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include client-side validation scripts -->
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
