@model Recipebook.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Category Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-brown">
                Back to List
            </a>
        </div>
    </div>
</div>

<!-- Recipes Section -->
<div class="card shadow-sm">
    <div class="card-body">
        <h3 class="mb-3">
            Recipes in this Category
            <span class="badge bg-brown">
                @(Model.CategoryRecipes?.Count() ?? 0)
            </span>
        </h3>

        @if (Model.CategoryRecipes != null && Model.CategoryRecipes.Any())
        {
            <ul class="list-group">
                @foreach (var cr in Model.CategoryRecipes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @cr.Recipe.Title
                        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@cr.Recipe.Id" class="btn btn-sm btn-brown">
                            View
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No recipes are assigned to this category.</p>
        }
    </div>
</div>