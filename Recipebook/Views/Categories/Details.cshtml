@model Recipebook.Models.Category
@using System.Security.Claims
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    // Browser/tab title
    ViewData["Title"] = "Category Details";

    // Provided by controller for "created by" line; safe if null
    var ownerEmail = ViewBag.OwnerEmail as string;

    // Count of recipes linked to this category (null-safe)
    var itemCount = Model.CategoryRecipes?.Count() ?? 0;
}

<div class="details-page position-relative">

    <div class="details-actions-top d-flex justify-content-between w-100">
        <a onclick="history.back()" class="btn btn-brown">
            <i class="bi bi-arrow-left-circle"></i>
        </a>

        <div class="d-flex gap-2">
            @* Only show Edit/Delete to the category owner *@
            @if (User?.Identity is { IsAuthenticated: true } && Model?.OwnerId == User.FindFirstValue(ClaimTypes.NameIdentifier) || User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i>
                </a>
            }
        </div>
    </div>

    <div class="details-header text-center mt-5">
        <h1 class="recipe-title">@Model?.Name</h1>

        <div class="author d-flex justify-content-center align-items-center gap-2">
            @{
                var owner = ((Dictionary<string, (string Email, bool IsAdmin)>)ViewBag.OwnerInfo)[Model.OwnerId];
            }
            <span>
                Category created by
                <a>
                    @if (owner.IsAdmin)
                    {
                        <i class="bi bi-shield-fill-check" title="Admin"></i>
                    }
                    @ownerEmail
                </a>
            </span>
        </div>
    </div>

    <div class="details-body mt-4">
        <h4 class="section-title mt-4">
            Recipes in this Category
            <span class="badge bg-success text-white">@itemCount</span>
        </h4>

        @if (Model?.CategoryRecipes != null && Model.CategoryRecipes.Any())
        {
            <ul class="list-group">
                @foreach (var cr in Model.CategoryRecipes)
                {
                    if (cr.Recipe != null)
                    {
                        <a asp-controller="Recipes"
                           asp-action="Details"
                           asp-route-id="@cr.Recipe.Id"
                           class="list-group-item my-1 text-decoration-none custom-list-item">

                            <div>
                                <strong>@cr.Recipe.Title</strong>
                                <p class="mb-0 small">
                                    @{
                                        // Show a short description; fallback if missing; truncate long text
                                        var desc = cr.Recipe.Description ?? "";
                                        if (string.IsNullOrWhiteSpace(desc))
                                        {
                                            @: <span class="fst-italic">No description available.</span>
                                        }
                                        else
                                        {
                                            if (desc.Length > 100)
                                            {
                                                desc = desc.Substring(0, 100) + "...";
                                            }
                                            @desc
                                        }
                                    }
                                </p>
                            </div>
                        </a>
                    }
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No recipes are assigned to this category.</p>
        }
    </div>
</div>
