@model Recipebook.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="details-page position-relative">

    <div class="details-actions-top d-flex justify-content-between w-100">
        <a onclick="history.back()" class="btn btn-brown">
            <i class="bi bi-arrow-left-circle"></i>
        </a>

        <div class="d-flex gap-2">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i>
                </a>
            }
        </div>
    </div>

    <div class="details-header text-center mt-5">
        <h1 class="recipe-title">@Html.DisplayFor(model => model.Name)</h1>
    </div>

    <div class="details-body mt-4">
        <h4 class="section-title mt-4 d-flex align-items-center gap-2">
            Recipes in this Category
            <span class="badge bg-brown">
                @(Model.CategoryRecipes?.Count() ?? 0)
            </span>
        </h4>

        @if (Model.CategoryRecipes != null && Model.CategoryRecipes.Any())
        {
            <ul class="list-group">
                @foreach (var cr in Model.CategoryRecipes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @cr.Recipe.Title
                        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@cr.Recipe.Id" class="btn btn-sm btn-brown">
                            View
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No recipes are assigned to this category.</p>
        }
    </div>
</div>