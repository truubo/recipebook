@model IEnumerable<Recipebook.Models.Category>

@{
    ViewData["Title"] = "Categories";
    // NEW: lookup from controller: OwnerId -> Email
    var owners = ViewBag.OwnerEmails as System.Collections.Generic.Dictionary<string, string>;
    var currentSearch = ViewBag.SearchString as string; // NEW
}

<h1 class="mb-4">Categories</h1>

<div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New
    </a>

    <!-- NEW: Search form -->
    <form asp-action="Index" method="get" class="d-flex gap-2">
        <input type="text"
               name="searchString"
               value="@(currentSearch ?? string.Empty)"
               class="form-control"
               placeholder="Search by category name..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">No results found.</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Author</th> <!-- NEW -->
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Name</strong>
                        </td>
                        <td class="text-muted">
                            <!-- NEW -->
                            @(owners?.GetValueOrDefault(item.OwnerId) ?? "(unknown)")
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                    Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
