@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
    var currentSearch = ViewBag.SearchString as string;
}

<div class="container category-index-page">
    <div class="index-header">
        <h1>Categories</h1>
        <p class="lead text-muted">Browse existing categories or create your own.</p>
    </div>

    <div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        @if (User?.Identity is { IsAuthenticated: true })
        {
            <a asp-action="Create" class="btn btn-success btn-create">
                <i class="bi bi-plus-circle"></i> Create
            </a>
        }

        <form asp-action="Index" method="get" class="d-flex gap-2 ms-auto">
            <input type="text"
                   name="searchString"
                   value="@(currentSearch ?? string.Empty)"
                   class="form-control"
                   placeholder="Search by category name..." />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-brown">Clear</a>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-brown" data-persist="true">No results found.</div>
    }

    <div class="category-card-grid">
        @foreach (var item in Model)
        {
            <div class="category-pill-card">
                <a asp-action="Details" asp-route-id="@item.Id" class="card-overlay"></a>

                <div class="card-inner">
                    <div class="card-body">
                        <h5 class="category-name">@item.Name</h5>
                        <small class="text-muted">
                            @{
                                var count = item.CategoryRecipes?.Count() ?? 0;
                            }
                            @count @((count == 1) ? "recipe" : "recipes")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>